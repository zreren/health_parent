<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.health.dao.SarcopeniaDao">
    <!--新增-->
    <insert id="add" parameterType="com.health.pojo.Sarcopenia">
        insert into test_Sarcopenia(id,user_id,user_name,user_gender,user_age,user_height,user_resistance,fistgrip,secondgrip,fistwalk,secondwalk,sarcopenia)
        values
        (#{id},#{user_id},#{user_name},#{user_gender},#{user_age},#{user_height},#{user_resistance},#{fistgrip},#{secondgrip},#{fistwalk},#{secondwalk},#{sarcopenia})
    </insert>
    <select id="selectByCondition" parameterType="string"
            resultType="com.health.pojo.Sarcopenia">
        select * from test_Sarcopenia
        <if test="value != null and value.length > 0">
            where id = #{value} or user_name = #{value}
        </if>
    </select>

    <delete id="deleteById" parameterType="int">
        delete from test_Sarcopenia where id = #{id}
    </delete>
    <!--根据检查项id查询中间关系表-->
    <select id="findCountByCheckItemId" resultType="long" parameterType="int">
        select * from t_user where id = #{user_id}
    </select>
    <update id="edit" parameterType="com.health.pojo.Sarcopenia">
        update test_Sarcopenia
        <set>
            <if test="name != null">
                user_name = #{user_name},
            </if>
            <if test="sex != null">
                user_gender = #{user_gender},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="findById" parameterType="int" resultType="com.health.pojo.Sarcopenia">
        select * from test_Sarcopenia where id = #{id}
    </select>

</mapper>